<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"   xmlns:tools="http://schemas.android.com/tools"       android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="식별문자1"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/et_identifier1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="첫번째 식별문자를 입력하세요."
                android:inputType="text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="식별문자2"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/et_identifier2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="두번째 식별문자를 입력하세요."
                android:inputType="text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제형"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">
                <LinearLayout
                    android:id="@+id/ll_type_tablet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/color_border_white"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="36dp"
                        android:src="@drawable/tablet"
                        android:contentDescription="정제 이미지" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="정제" android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_type_hard_capsule"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/color_border_white"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="36dp"
                        android:src="@drawable/hard_capsule"
                        android:contentDescription="경질캡슐 이미지" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="경질캡슐"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_type_soft_capsule"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:background="@drawable/color_border_white"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="36dp"
                        android:src="@drawable/soft_capsule"
                        android:contentDescription="연질캡슐 이미지" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="연질캡슐"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모양"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="0dp">
                <Button android:id="@+id/btn_shape_round"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="원형" />
                <Button
                    android:id="@+id/btn_shape_oval"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="타원" />
                <Button
                    android:id="@+id/btn_shape_triangle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="삼각형" />
                <Button
                    android:id="@+id/btn_shape_square"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="사각형" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">
                <Button
                    android:id="@+id/btn_shape_diamond"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="마름모" />
                <Button
                    android:id="@+id/btn_shape_pentagon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="오각형" />
                <Button
                    android:id="@+id/btn_shape_hexagon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="육각형" />
                <Button
                    android:id="@+id/btn_shape_octagon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="팔각형" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="색상"
                android:layout_marginTop="12dp"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="4dp">
                    <ImageButton
                        android:id="@+id/btn_color_red"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="#F44336"
                        android:contentDescription="빨강" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="빨강"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="4dp">
                    <ImageButton
                        android:id="@+id/btn_color_yellow"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="#FFEB3B"
                        android:contentDescription="노랑" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="노랑"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="4dp">
                    <ImageButton
                        android:id="@+id/btn_color_green"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="#4CAF50"
                        android:contentDescription="초록" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="초록"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/btn_color_blue"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="#2196F3"
                        android:contentDescription="파랑" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="파랑"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="4dp">
                    <ImageButton
                        android:id="@+id/btn_color_purple"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="#9C27B0"
                        android:contentDescription="자주" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자주"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="4dp">
                    <ImageButton
                        android:id="@+id/btn_color_orange"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="#FF9800"
                        android:contentDescription="주황" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="주황"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="4dp">
                    <ImageButton
                        android:id="@+id/btn_color_black"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="#000000"
                        android:contentDescription="검정" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="검정"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp"
                        android:textColor="@android:color/black" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/btn_color_white"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/color_border_white"
                        android:contentDescription="하양" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="하양"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분할선"
                android:layout_marginTop="12dp"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp">
                <Button
                    android:id="@+id/btn_line_none"
                    android:layout_marginStart="2dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="없음"/>
                <Button
                    android:id="@+id/btn_line_single"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="(ㅡ)형"/>
                <Button
                    android:id="@+id/btn_line_cross"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="2dp"
                    android:text="(十)형"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_search"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="검색"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

        </LinearLayout>
    </ScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewResults"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_medicine" />

</LinearLayout>